@page "/dashboard"

<PageTitle>Dashboard</PageTitle>


<div class="container-fluid">

    <div class="section pt-4">
        <RadzenCard>
            <div class="row g-4">

                <!-- Item 1-->
                <div class="col-sm-6 col-xl-3">
                    <div class="rounded d-flex align-items-center justify-content-between p-4">
                        <i class="bi bi-alarm text-primary" style="font-size: 3rem;"></i>
                        <div class="ms-3">
                            <p class="mb-2">Today Sale</p>
                            <h6 class="mb-0">$1234</h6>
                        </div>
                    </div>
                </div>

                <!-- Item 2-->
                <div class="col-sm-6 col-xl-3">
                    <div class="rounded d-flex align-items-center justify-content-between p-4">
                        <i class="bi bi-alarm text-primary" style="font-size: 3rem;"></i>


                        <div class="ms-3">
                            <p class="mb-2">Total Sale</p>
                            <h6 class="mb-0">$1234</h6>
                        </div>
                    </div>
                </div>

                <!-- Item 3-->
                <div class="col-sm-6 col-xl-3">
                    <div class="rounded d-flex align-items-center justify-content-between p-4">
                        <i class="bi bi-alarm text-primary" style="font-size: 3rem;"></i>
                        <div class="ms-3">
                            <p class="mb-2">Today Revenue</p>
                            <h6 class="mb-0">$1234</h6>
                        </div>
                    </div>
                </div>

                <!-- Item 4-->
                <div class="col-sm-6 col-xl-3">
                    <div class="rounded d-flex align-items-center justify-content-between p-4">
                        <i class="bi bi-alarm text-primary" style="font-size: 3rem;"></i>
                        <div class="ms-3">
                            <p class="mb-2">Total Revenue</p>
                            <h6 class="mb-0">$1234</h6>
                        </div>
                    </div>
                </div>

            </div>
        </RadzenCard>
    </div>

    <div class="section pt-4">
        <div class="row g-4">
            <div class="col-sm-12 col-xl-6">
                <RadzenCard>
                    <div class=" text-center rounded p-4">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <h6 class="mb-0">Worldwide Sales</h6>
                            <a href="">Show All</a>
                        </div>
                        <RadzenChart>
                            <RadzenColumnSeries Data="@revenue" CategoryProperty="Quarter" ValueProperty="Revenue" />
                        </RadzenChart>
                    </div>
                </RadzenCard>
            </div>
            <div class="col-sm-12 col-xl-6">
                <RadzenCard>
                    <div class="text-center rounded p-4">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <h6 class="mb-0">Monthly Sales</h6>
                            <a href="">Show All</a>
                        </div>
                        <RadzenChart>
                            <RadzenLineSeries Data="@salesData" CategoryProperty="Month" ValueProperty="Sales" />
                        </RadzenChart>
                    </div>
                </RadzenCard>
            </div>
        </div>
    </div>

    <div class="section pt-4">
        <RadzenCard>
            <div class="rounded p-4">

                <div class="d-flex align-items-center justify-content-between mb-4">

                    <h6 class="mb-0">Recent Sales</h6>
                    <a href="">Show All</a>
                </div>
                <RadzenDataGrid Data="@orders" TItem="Order" AllowPaging="true" PageSize="10">
                    <Columns>
                        <RadzenDataGridColumn TItem="Order" Property="OrderID" Title="Order ID" />
                        <RadzenDataGridColumn TItem="Order" Property="CustomerName" Title="Customer Name" />
                        <RadzenDataGridColumn TItem="Order" Property="OrderDate" Title="Order Date" FormatString="{0:MM/dd/yyyy}" />
                    </Columns>
                </RadzenDataGrid>

            </div>
        </RadzenCard>
    </div>

    <div class="section pt-4">
        <div class="row g-4">
                           <div class="col-sm-12 col-md-6 col-xl-4">
                                <RadzenCard>
                    <div class="h-100 rounded p-4">

                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Card 1</h6>
                            <a href="">Show All</a>
                        </div>

                    </div>
                </RadzenCard>
                </div>
           
           
                <div class="col-sm-12 col-md-6 col-xl-4">
                     <RadzenCard>
                    <div class="h-100 rounded p-4">

                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Card 2</h6>
                            <a href="">Show All</a>
                        </div>

                    </div>
                </RadzenCard>
                </div>
         
          
                <div class="col-sm-12 col-md-6 col-xl-4">
                      <RadzenCard>
                    <div class="h-100  rounded p-4">

                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Card 3</h6>
                            <a href="">Show All</a>
                        </div>

                    </div>
                </RadzenCard>
                </div>
           
        </div>
    </div>

</div>

<!-- Code for Overview -->
