    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[]
    {
                new DataItem { Quarter = "Q1", Revenue = 234000 },
                new DataItem { Quarter = "Q2", Revenue = 284000 },
                new DataItem { Quarter = "Q3", Revenue = 274000 },
                new DataItem { Quarter = "Q4", Revenue = 294000 }
    };
}

<!-- Code for Line Chart-->
  @code {
    class SalesDataItem
    {
        public string Month { get; set; }
        public double Sales { get; set; }
    }

    SalesDataItem[] salesData = new SalesDataItem[]
    {
                new SalesDataItem { Month = "January", Sales = 234000 },
                new SalesDataItem { Month = "February", Sales = 284000 },
                new SalesDataItem { Month = "March", Sales = 274000 },
                new SalesDataItem { Month = "April", Sales = 294000 }
    };
  }


<!-- Code for members-->
@code {
    List<Order> orders = new List<Order>
    {
        new Order { OrderID = 1, CustomerName = "William Does", OrderDate = DateTime.Now },
        new Order { OrderID = 1, CustomerName = "John Musk", OrderDate = DateTime.Now },
        new Order { OrderID = 1, CustomerName = "John Doe", OrderDate = DateTime.Now },
        new Order { OrderID = 1, CustomerName = "Peter Doe", OrderDate = DateTime.Now },
        new Order { OrderID = 1, CustomerName = "John Doe", OrderDate = DateTime.Now },
        new Order { OrderID = 2, CustomerName = "Jane Smith", OrderDate = DateTime.Now.AddDays(-1) }
    };

    public class Order
    {
        public int OrderID { get; set; }
        public string CustomerName { get; set; }
        public DateTime OrderDate { get; set; }
    }
}